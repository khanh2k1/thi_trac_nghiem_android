<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="70dp" />
            <stroke android:width="70dp" android:color="#03A9F4" />
            <gradient android:angle="-180" android:startColor="#03A9F4" android:endColor="#00BCD4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="70dp" />
            <stroke android:width="70dp" android:color="#E6BDBDBD" />
            <solid android:color="#E6BDBDBD"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="70dp" />
            <stroke android:width="1dp" android:color="#00BCD4" />
            <gradient android:angle="-180" android:startColor="#00BCD4" android:endColor="#FFFFFF" />
        </shape>
    </item>
</selector>