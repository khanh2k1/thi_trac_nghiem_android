<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityCreateQuestion">

    <LinearLayout
        android:id="@+id/topSheet"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#03A9F4"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#03A9F4"
            android:gravity="start"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="150dp"
            android:gravity="center"
            android:text="Quay lại"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Lưu"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pagerCreateQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomSheet"
        android:layout_below="@+id/topSheet"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/light_blue_400"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:background="@color/light_blue_400"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <Button
            android:background="@drawable/radius_white"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:text="Danh sách câu hỏi" />

        <ImageButton
            android:background="@color/light_blue_400"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_24" />
    </LinearLayout>
</RelativeLayout>